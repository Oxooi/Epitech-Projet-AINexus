{# If the route is Personnas then show this navbar #}
{% if app.request.pathinfo == '/personnas/' %}
  <nav class="navbar navbar-expand-md sticky-top py-3 navbar-dark" id="mainNav">
    <div class="container">
      <a class="navbar-brand d-flex align-items-center" href="{{ path('app_main') }}"><span>AI-Nexus</span></a><button data-bs-toggle="collapse" class="navbar-toggler" data-bs-target="#navcol-1"><span class="visually-hidden">Toggle navigation</span><span class="navbar-toggler-icon"></span></button>
      <div class="collapse navbar-collapse" id="navcol-1">
        <ul class="navbar-nav mx-auto">
          <li class="nav-item">
            <a class="nav-link active" href="{{ path('app_main') }}">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="#services">Services</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="#prices">Pricing</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="#faq">FAQ</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="#personnas">Personnas</a>
          </li>
        </ul><a class="btn btn-primary shadow" role="button" href="{{ path('app_register') }}">Sign up</a>
      </div>
    </div>
  </nav>
{% else %}
  <nav class="navbar navbar-light nav-style navbar-expand-md" style="background-color: #ffffffd8 !important;">
    <div class="container-fluid">
      <a class="navbar-brand" href="{{ path('app_main') }}">AINexus</a>
      <button data-bs-toggle="collapse" class="navbar-toggler" data-bs-target="#navcol-1">
        <span class="visually-hidden">Toggle navigation</span>
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navcol-1">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link link-hover" href="{{ path('app_main') }}">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link link-hover" href="{{ path('app_forum_index') }}">Forum</a>
          </li>
          <li class="nav-item">
            <a class="nav-link link-hover" href="#">Galerie</a>
          </li>
        </ul>
        {# If the user is connected #}
        {% if app.user %}
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link link-hover" href="{{ path('profile_index') }}">Profil</a>
            </li>
            <li class="nav-item">
              <a class="nav-link link-hover btn btn-outline-secondary" href="{{ path('app_logout') }}">Logout</a>
            </li>
          </ul>
          {# If the user is not connected #}
        {% else %}
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link link-hover" href="{{ path('app_login') }}">Sign In</a>
            </li>
            <li class="nav-item">
              <a class="nav-link link-hover" href="{{ path('app_register') }}">Sign up</a>
            </li>
          </ul>
        {% endif %}
      </div>
    </div>
  </nav>
{% endif %}
